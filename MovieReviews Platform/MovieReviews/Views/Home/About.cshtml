@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us</title>
    <link rel="stylesheet" href="~/styles.css">
</head>
<body>
    <nav>
        <ul class="navbar">
            <li><a href="/Home/Index">Home</a></li>
            <li><a href="/Movies">Movies</a></li>
            <li><a href="/FanTheory">Fan Theories</a></li>
            <li><a href="/MovieRequest">Request Movie</a></li>
            <li><a href="/Home/About">About Us</a></li>
            <li><a href="/Contact">Contact</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a href="/Account/Logout">Logout (@User.Identity.Name)</a></li>
            }
            else
            {
                <li><a href="/Account/Login">Login</a></li>
            }
        </ul>
    </nav>

    <div class="container">
        <h1>About Us</h1>
        <p><strong>Welcome to Movie Reviews!</strong></p>
        <p>We are a passionate team of movie enthusiasts dedicated to providing in-depth reviews, honest ratings, and a platform for cinema lovers to share their opinions.</p>

        <h2>Our Mission</h2>
        <p>Our goal is to create the most reliable and engaging movie review website. Whether you're looking for recommendations, detailed analysis, or just want to explore top-rated films, we’ve got you covered.</p>

        <h2>Meet the Team</h2>
        <div class="team">
            <div class="team-member">
                <img src="~/Images/john.jpg" alt="John Doe">
                <h3>John Doe</h3>
                <p>Founder & Lead Critic</p>
            </div>
            <div class="team-member">
                <img src="~/Images/sara.jpg" alt="Sarah Smith">
                <h3>Sarah Smith</h3>
                <p>Editor & Content Manager</p>
            </div>
            <div class="team-member">
                <img src="~/Images/michael.jpg" alt="Michael Brown">
                <h3>Michael Brown</h3>
                <p>Tech & Web Development</p>
            </div>
        </div>

        <h2>Why Choose Us?</h2>
        <ul>
            <li>Unbiased and honest movie reviews.</li>
            <li>Regular updates with the latest film releases.</li>
            <li>Community-driven discussions and opinions.</li>
            <li>Top-rated movie recommendations curated by experts.</li>
        </ul>

        <p>If you have any questions or want to collaborate, don’t hesitate to <a href="/Contact">contact us</a>!</p>
    </div>

    <div class="footer">
        <p>&copy; 2025 Movie Reviews. All rights reserved.</p>
    </div>
</body>
</html>
