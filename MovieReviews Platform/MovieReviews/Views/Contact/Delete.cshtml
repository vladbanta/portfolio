@model MovieReviews.Models.ContactMessage

@{
    ViewData["Title"] = "Delete Message";
}

<div class="container">
    <h1>Delete Message</h1>
    <p>Are you sure you want to delete this message from <strong>@Model.Name</strong>?</p>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ContactMessageId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Messages" class="btn btn-secondary">Cancel</a>
    </form>
</div>
