@model MovieReviews.Models.ContactMessage

@{
    ViewData["Title"] = "Edit Message";
}

<nav>
    <ul>
        <li><a href="/index.html">Home</a></li>
        <li><a href="/movies">Movies</a></li>
        <li><a href="/fantheory">Fan Theories</a></li>
        <li><a href="/movierequest">Request Movie</a></li>
        <li><a href="/about.html">About Us</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/login.html">Login</a></li>
    </ul>
</nav>

<div class="container contact-container">
    <h1 class="section-title">Edit Contact Message</h1>

    <form asp-action="Edit" class="contact-form">
        <input type="hidden" asp-for="ContactMessageId" />

        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Message">Message</label>
        <textarea asp-for="Message" rows="5"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>

        <div style="display: flex; gap: 10px; margin-top: 20px;">
            <button type="submit" class="btn">Save Changes</button>
            <a asp-action="Messages" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
