@model MovieReviews.Models.FanTheory

@{
    ViewData["Title"] = "Create Fan Theory";
}

<div class="container contact-container">
    <h1>Create a New Fan Theory</h1>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title">Theory Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Theory">Theory</label>
            <textarea asp-for="Theory" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Theory" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Reason">Why it might be true?</label>
            <textarea asp-for="Reason" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MovieId">Related Movie</label>
            <select asp-for="MovieId" class="form-control" asp-items="@(new SelectList(ViewBag.Movies, "MovieId", "Title"))">
                <option value="">-- Select a movie --</option>
            </select>
            <span asp-validation-for="MovieId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
